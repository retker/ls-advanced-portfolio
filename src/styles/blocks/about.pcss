.about {
    position: relative;
  }
  
  .about__columns {
    display: flex;
    /* padding: 169px 17% 268px; */
    padding: 0 17% 11%;
    justify-content: space-between;
  }
  
  .about__user-text {
    color: rgba($text-color, .5);
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    width: 56%;
  }
  
  .about__user {
    width: 36%;
  }
  
  .about__desc {
    font-weight: 600;
    margin-bottom: 20px;
  }
  
  .about__title {
    font-weight: 700;
    font-size: 36px;
    margin-bottom: 30px;
    color: $text-color;
  }
  
  .about__ps {
    font-style: italic;
    margin-bottom: 36px;
  }